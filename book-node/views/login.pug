extend layout
block content
  nav(class="navbar navbar-expand-md navbar-dark bg-dark mb-5")
    <i class="p-nav fas fa-book m-2 "></i>
      <p class="p-nav m-2 nav-text">Kaiju </p>
      <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
          <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                  <a class="nav-link" href="/addbook">Add Order</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link nav-text" href="/listbook">Order List</a>
              </li>
          </ul>
      </div>
  
  .container
    <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><span class="text">ID</span> <i class="fas fa-id-card ml-3 icon"></i></th>
        <th scope="col"><span class="text">Name</span></th>
        <th scope="col"><span class="text">Address</span></th>
        <th scope="col"><span class="text">Product</span><i class="fas fa-book-open ml-3 icon"></i></th>
        <th scope="col"><span class="text">Total Price</span><i class="fab fa-bitcoin ml-3 icon"></i></th>
      </tr>
    </thead>
    <tbody>
      each val in orders
        <tr>
          <th scope="row">#{val.id}</th>
          <th scope="row">#{val.name} </td>
          <th scope="row">#{val.address}</td>  
          <th scope="row">
            <ui>
              each i, index in val.book
                if i === 0 
                else if i === ""
                else
                  <li>#{books[index].title} : #{i} เล่ม</li>
            </ui> 
          </td>
          <th scope="row" class = "price">#{val.price} <i class="fab fa-bitcoin"></i></td>
        </tr>
    </tbody>
    </table>